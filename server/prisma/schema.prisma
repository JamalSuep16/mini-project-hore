generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum categories {
  Food
  Bussiness
  Arts
  Hobbies
}

model Events {
  id         Int        @id @default(autoincrement())
  title      String
  desc       String
  categories categories
  upcoming   Boolean
}

model Categories {
  id       Int        @id @default(autoincrement())
  name     categories
  preview  String
  imageURL String
}

model Attendees {
  id    Int    @id @default(autoincrement())
  name  String
  email String
  password String
}

model Organizers {
  id    Int    @id @default(autoincrement())
  name  String
  email String
  password String
}

model Feedback {
  id          Int    @id @default(autoincrement())
  comments    String
  ratings     String
  suggestions String
}

model Badges {
  id          Int    @id @default(autoincrement())
  badgeName   String
  description String
}

model Leaderboards {
  id           Int    @id @default(autoincrement())
  rank         String
  attendeeName String
}
